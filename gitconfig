[alias]
	# Aliases
	ch = checkout
	st = status
	mg = merge --no-ff
	br = branch
	df = diff
	ft = fetch
	ps = push -u origin --all
	pl = pull
	d = difftool

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = false
	filemode = false
[color]
	ui = true
[push]
	default = current
[branch]
	autosetuprebase = always
#USE Intelli
[merge]
        tool = intellij
[difftool "intellij"]
        cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea diff $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\")
[mergetool "intellij"]
        cmd = /Applications/IntelliJ\\ IDEA.app/Contents/MacOS/idea merge $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\") $(cd $(dirname \"$BASE\") && pwd)/$(basename \"$BASE\") $(cd $(dirname \"$MERGED\") && pwd)/$(basename \"$MERGED\")
        trustExitCode = true

# Comment: This is to unlock VSCode as your git diff and git merge tool
;[merge]
    ;tool = vscode
;[mergetool "vscode"]
    ;cmd = code --wait $MERGED
;[diff]
    ;tool = vscode
;[difftool "vscode"]
    ;cmd = code --wait --diff $LOCAL $REMOTE
# VSCode Difftool
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[commit]
	template = /Users/pk/.stCommitMsg
